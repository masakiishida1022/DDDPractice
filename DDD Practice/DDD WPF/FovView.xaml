<UserControl x:Class="DDD_WPF.FovControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDD_WPF"
             xmlns:viewModels="clr-namespace:DDD_WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.Resources>
        <ItemsPanelTemplate x:Key="FovGraphPanelTemplate" />
        <DataTemplate x:Key="GovGraphItemTemplate" >
            <Grid>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Text="{Binding InputValue.Value, UpdateSourceTrigger=PropertyChanged}" Width="400" Height="40" Grid.Row="0"/>
        <Label Content="{Binding OutputValue.Value}" Height="40" Width="400" Grid.Row="1"/>
        <Canvas Name="FovCanvas" Background="LightCyan" MouseLeftButtonDown="canvas1_MouseLeftButtonDown" Grid.Row="2">
            <Canvas.Margin>0,37,0,0</Canvas.Margin>
        </Canvas>


    </Grid>
</UserControl>
